<!-- res/drawable/selector_item_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <!-- Set your desired background color for the selected state -->
            <solid android:color="#9E9E9E" />
            <!-- Set corner radius for the selected state -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <!-- Set your desired background color for the default state -->
            <solid android:color="#545454" />
            <!-- Set corner radius for the default state -->
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>
