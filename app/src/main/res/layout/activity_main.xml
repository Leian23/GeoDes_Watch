<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:background="#323232">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boxInsetLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:scrollbars="vertical"
        tools:context=".MainActivity">

        <include layout="@layout/result_window"
            android:visibility="gone"></include>


        <ImageButton
            android:id="@+id/textSearchButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="160dp"
            android:background="@drawable/circle_corner"
            android:onClick="onVoiceSearchButtonClick"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@drawable/baseline_keyboard_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintHorizontal_bias="0.290"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/voiceSearchButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="160dp"
            android:background="@drawable/circle_corner"
            android:onClick="onVoiceSearchButtonClick"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@drawable/baseline_keyboard_voice_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintHorizontal_bias="0.724"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/Schedules"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="225dp"
            android:background="@drawable/round_corner"
            android:drawableLeft="@drawable/baseline_schedule_24"
            android:onClick="onVoiceSearchButtonClick"
            android:paddingLeft="5dp"
            android:text="Schedules"
            android:textAllCaps="false"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.126"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.42" />

        <Button
            android:id="@+id/Alertss"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="225dp"
            android:background="@drawable/round_corner"
            android:drawableLeft="@drawable/baseline_access_alarm_24"
            android:onClick="onVoiceSearchButtonClick"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Alerts"
            android:textAllCaps="false"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.890"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.42" />


        <Button
            android:id="@+id/Map"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/round_corner"
            android:drawableLeft="@drawable/baseline_access_alarm_24"
            android:onClick="onVoiceSearchButtonClick"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Map"
            android:textAllCaps="false"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.890"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.42" />


        <Button
            android:id="@+id/Settings"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/round_corner"
            android:drawableLeft="@drawable/baseline_access_alarm_24"
            android:onClick="onVoiceSearchButtonClick"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Settings"
            android:textAllCaps="false"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.126"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.42" />


        <Button
            android:id="@+id/OfflineMap"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="350dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.85"
            android:background="@drawable/round_corner"
            android:textAllCaps="false"
            android:text="Help"
            android:textSize="12dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/unpair"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="405dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.85"
            android:background="@drawable/round_corner"
            android:textAllCaps="false"
            android:text="Unpair"
            android:textSize="12dp"
            android:layout_gravity="center"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>