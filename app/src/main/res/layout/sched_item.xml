<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_margin="1.5dp"

        app:cardBackgroundColor="#545454"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.95">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/TimeSched"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginStart="38dp"
                android:text="11:59 PM"
                android:textSize="12dp"
                app:layout_constraintBottom_toTopOf="@+id/alarmsSaved"
                app:layout_constraintHorizontal_bias="0.65"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.592" />

            <TextView
                android:id="@+id/alarmsSaved"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginStart="38dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Alert#1, Alert#2"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.897" />

            <TextView
                android:id="@+id/TitleSetSched"
                android:layout_width="107dp"
                android:layout_height="23dp"
                android:layout_marginStart="20dp"
                android:alpha="0.7"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="School"
                android:textSize="20dp"


                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.050" />

            <Switch
                android:id="@+id/AlertSwitch"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.129" />

            <ImageView
                android:id="@+id/AlarmIc"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="125dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/clockSchedIc"
                app:layout_constraintHorizontal_bias="0.820"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/baseline_access_alarm_24" />

            <ImageView
                android:id="@+id/clockSchedIc"
                android:layout_width="20dp"
                android:layout_height="17dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.375"
                app:srcCompat="@drawable/baseline_access_time_24" />

            <ImageView
                android:id="@+id/calendarImage"
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_marginStart="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.630"
                app:srcCompat="@drawable/baseline_calendar_month_24" />

            <TextView
                android:id="@+id/DaySched"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="38dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Sat, Sun, Tue"
                android:textSize="12dp"

                app:layout_constraintHorizontal_bias="0.65"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>