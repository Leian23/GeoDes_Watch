<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323232">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="vertical"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:text="Name"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/voiceSearchButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_corner"
                    android:src="@drawable/baseline_keyboard_voice_24"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:onClick="onVoiceSearchButtonClick"
                    android:layout_marginRight="35dp"/>

                <ImageButton
                    android:id="@+id/textSearchButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="Text Search"
                    android:src="@drawable/baseline_keyboard_24"
                    android:background="@drawable/circle_corner"
                    android:layout_gravity="center"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:onClick="onTextSearchButtonClick"
                    />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/ChooseAlert"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_corner"
                    android:onClick="onVoiceSearchButtonClick"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:text="Choose Alert"
                    android:src="@drawable/baseline_info_24" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/PickTime"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_corner"
                    android:onClick="onVoiceSearchButtonClick"
                    android:text="Pick Time"
                    android:textSize="12dp"
                    android:src="@drawable/baseline_info_24" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingBottom="20dp"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/RepeatSched"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_corner"
                    android:onClick="onVoiceSearchButtonClick"
                    android:text="Repeat"
                    android:textSize="12dp"
                    android:src="@drawable/baseline_info_24" />
            </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/discardAdd"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/round_corner_cancel"
                android:src="@drawable/baseline_close_24"
                android:layout_marginRight="15dp"/>

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/round_corner"
                android:src="@drawable/baseline_check_24"/>
        </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="50dp">
            </FrameLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
