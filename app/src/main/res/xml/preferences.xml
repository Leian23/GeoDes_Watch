<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <!-- Map Category -->
    <PreferenceCategory
        android:title="Map">
        <ListPreference
            android:key="distance_units"
            android:title="Distance Unit"
            android:summary="Select distance unit"
            android:dialogTitle="Select Distance Unit"
            android:entries="@array/distance_units"
            android:entryValues="@array/distance_units_values"
            android:defaultValue="kilometers"
            android:layout="@layout/custom_list_preference"/>
    </PreferenceCategory>

    <!-- Alerts Category -->
    <PreferenceCategory
        android:title="Alerts">
        <Preference
            android:key="ringtone"
            android:title="Ringtone"
            android:summary="Select custom ringtone"
            android:layout="@layout/custom_list_preference"/>
        <SeekBarPreference
            android:key="volume"
            android:title="Volume"
            android:summary="Adjust volume"
            android:defaultValue="100"
            android:max="100"/>

        <SwitchPreference
            android:key="Shake to Dismiss"
            android:title="Shake to Dismiss"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:key="vibration"
            android:title="Vibration"
            android:summary="Enable vibration"
            android:defaultValue="true"/>
        <ListPreference
            android:key="alert_type"
            android:title="Alert Type"
            android:summary="Select alert type"
            android:dialogTitle="Select Alert Type"
            android:entries="@array/alert_types"
            android:entryValues="@array/alert_types_values"
            android:defaultValue="1"
            android:layout="@layout/custom_list_preference"/>
        <ListPreference
            android:key="audio_output"
            android:title="Audio Output"
            android:summary="Select audio output"
            android:dialogTitle="Select Audio Output"
            android:entries="@array/audio_outputs_values"
            android:entryValues="@array/audio_outputs_values"
            android:defaultValue="speaker"
            android:layout="@layout/custom_list_preference"/>
    </PreferenceCategory>
</PreferenceScreen>
